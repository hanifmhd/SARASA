            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aku arep budal nang mall, arep tuku HP anyar."
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
